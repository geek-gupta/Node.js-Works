{{> header}}

<div class="container">
  <header class="jumbotron">
    <div class="container">


      <h2>Welcome to YelpCamp</h2>
      <p>View our hand-picked campgrounds fro all over the world</p>
      <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a></p>
    </div>
  </header>


  <div class="row text-center" style="display:flex; flex-wrap:wrap;">

    {{#each campgrounds}}
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="{{this.image}}" alt="image">
          <div class="caption">
            <h4>{{this.name}}</h4>
          </div>
          <p>
            <a href="/campgrounds/{{this._id}}" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{>footer}}
